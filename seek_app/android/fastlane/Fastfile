platform :android do
  desc "Seek app"
  lane :distribute do
      build_android_app(
      task: "assemble",
      build_type: "Release")
      # build_android_app is a built-in fastlane action.
      release = firebase_app_distribution(
        service_credentials_json_data: ENV['GOOGLE_APPLICATION_CREDENTIALS']
          app: "1:1015820849617:android:ab5598680a5634882c90f07",
          groups: "seek-testers",
          release_notes: "App for seek interview",
          firebase_cli_path: "/usr/local/bin/firebase",
          apk_path: "../build/app/outputs/apk/release/app-release.apk"
          android_artifact_type: "APK",
          android_artifact_path: "../build/app/outputs/apk/uat/release/app-release.apk",
      )
  end
end